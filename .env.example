# Database Configuration
DB_TYPE=postgres
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ollamapilot
DB_USER=postgres
DB_PASSWORD=change_me_in_production
DB_SSL_MODE=disable

# Server Configuration
PORT=8080
HOST=0.0.0.0
ENV=development

# Ollama Configuration
OLLAMA_HOST=ollama:11434
OLLAMA_TIMEOUT=30s
OLLAMA_ORIGINS=*
OLLAMA_INTERNAL_HOST=0.0.0.0
OLLAMA_NUM_PARALLEL=4
OLLAMA_MAX_LOADED_MODELS=2

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Configuration
MAX_CONCURRENT_CHATS=100
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s

# Docker-specific Configuration
# Uncomment and modify for containerized deployment
# ENV=production
# OLLAMA_HOST=ollama:11434
# LOG_LEVEL=info

# Security Configuration (Docker)
# DOCKER_USER_ID=1001
# DOCKER_GROUP_ID=1001

# Ollama Performance (Docker)
# OLLAMA_NUM_PARALLEL=4
# OLLAMA_MAX_LOADED_MODELS=1
# OLLAMA_ORIGINS=*

# Authentication Configuration
JWT_SECRET=your-secret-key-change-in-production-please-use-a-strong-random-key
JWT_EXPIRATION=24h
BCRYPT_COST=12

# Semantic Memory Configuration
ENABLE_SEMANTIC_MEMORY=true
EMBEDDING_MODEL=nomic-embed-text
MAX_CONTEXT_RESULTS=5